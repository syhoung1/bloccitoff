<!DOCTYPE html>
<html>
<head>
  <title>Bloccitoff</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  
  <div class='col-md-12'>
    <div class='page-nav'>
      <div class='user-link pull-right'>
        <% if current_user %>
          <%=
           link_to_unless_current("Profile", user_path(current_user)) do
              link_to("Home", { controller: "items", action: "index" })
            end
          %>
          <%= link_to "Sign out", destroy_user_session_path %>
        <% end %>
      </div>
    </div>
  </div>
  <%= yield %>
</body>
</html>
